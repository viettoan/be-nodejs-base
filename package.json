{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node app.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=30000 --coverage",
    "lint": "eslint .",
    "format": "prettier --single-quote --check .",
    "prepare": "cd ../ && husky install server/.husky",
    "dev": "cross-env NODE_ENV=development nodemon --experimental-modules server.js"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "aws-sdk": "^2.1476.0",
    "bull": "^4.10.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "mongodb": "^4.13.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "redis": "^4.6.11",
    "socket.io": "^4.6.2",
    "sprintf-js": "^1.1.2",
    "supertest": "^6.3.3",
    "winston": "^3.8.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.3",
    "@faker-js/faker": "^8.3.1",
    "eslint": "^8.0.0",
    "husky": "^7.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "eslint --fix"
    ]
  }
}
